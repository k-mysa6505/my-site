---
import SnsLinks from './SnsLinks.astro';
import CardList from './CardList.astro';
import Pagination from './Pagination.astro';
import { getContentList } from '../utils/contentUtils';

// URLから現在のページを取得
const url = new URL(Astro.request.url);
const currentPage = parseInt(url.searchParams.get('page') || '1');

// BlogとWorksデータを取得
const posts = await getContentList('blog');
const works = await getContentList('works');

// typeプロパティを追加し、型を統一
const postsWithType = posts.map(post => ({ 
    url: post.url,
    title: post.title,
    date: post.date,
    thumbnail: post.thumbnail,
    excerpt: post.excerpt,
    type: 'blog' as const
}));
const worksWithType = works.map(work => ({ 
    url: work.url,
    title: work.title,
    date: work.date,
    thumbnail: work.thumbnail,
    excerpt: work.excerpt,
    type: 'works' as const
}));

// BlogとWorksを統合し、日付順（新しい順）でソート
const allItems = [...postsWithType, ...worksWithType].sort((a, b) => {
    return new Date(b.date).getTime() - new Date(a.date).getTime();
});

// ページネーション用の設定
const itemsPerPage = 5;
const totalPages = Math.ceil(allItems.length / itemsPerPage);

// 現在のページに応じたアイテムを取得
const startIndex = (currentPage - 1) * itemsPerPage;
const endIndex = startIndex + itemsPerPage;
const currentItems = allItems.slice(startIndex, endIndex);
---

<head>
    <title>Kokko's Blog</title>
    <link href="https://fonts.googleapis.com/css2?family=Monoton&display=swap" rel="stylesheet">
</head>
<div id="welcome-section">
    <h1 class="home-title">Welcome to Kokko's Blog</h1>
    <p class="home-description">MYSのホームページです</p>
</div>
<div id="top-section">
    <section class="featured-section">
        <div class="grid">
            <div class="gird-item">
                <div class="image-holder">
                    <a href="/blog/">
                        <img src="/images/blog_img.jpg" alt="blogimg">
                    </a>
                    <span class="text-holder">
                        <span class="border-left"></span>
                        <span class="border-right"></span>
                        生態紹介<br />
                        <span>Blog</span>
                    </span>
                </div>
            </div>
            <div class="gird-item">
                <div class="image-holder">
                    <a href="/works/">
                        <img src="/images/works_img.png" alt="worksimg">
                    </a>
                    <span class="text-holder">
                        <span class="border-left"></span>
                        <span class="border-right"></span>
                        作品紹介<br />
                        <span>Works</span>
                    </span>
                </div>
            </div>
            <div class="gird-item">
                <div class="image-holder">
                    <a href="/about/">
                        <img src="/images/aboutme_img.png" alt="aboutimg">
                    </a>
                    <span class="text-holder">
                        <span class="border-left"></span>
                        <span class="border-right"></span>
                        自己紹介<br />
                        <span>About Me</span>
                    </span>
                </div>
            </div>
        </div>
    </section>
</div>
<div id="main-flex-container">
    <div id="left-column">
        <section class="info-section">
            <h2>お知らせ</h2>
            <ul class="info-list">
                <li class="info-item">
                    <span class="info-date">2024/07/20</span>
                    <span class="info-text">サイトをリニューアルしました！</span>
                </li>
                <li class="info-item">
                    <span class="info-date">2024/07/10</span>
                    <span class="info-text">新しい記事を公開しました。</span>
                </li>
            </ul>
        </section>
        <section class="recent-section">
            <h2>最近の出来事</h2>
            <CardList items={currentItems} type="mixed"/>
            <Pagination 
                currentPage={currentPage}
                totalPages={totalPages} 
                basePath="/"
                itemsPerPage={5}
                allItems={allItems}
                type="mixed"
            />
        </section>
    </div>
    <aside id="right-column">
        <section class="profile-section">
            <h2>About Me</h2>
            <img src="/images/icon.png" alt="管理人アイコン" class="profile-icon">
            <p>
                <span class="name">
                    Kota Miyasaka（Kokko）（宮坂 洸多/こっこ）
                </span><br>
                <span class="job">
                    Image Engineering major, Tokushima Univ student.
                </span>
                <span class="description">
                    <a href="/about/nagano">長野県</a>出身の徳島大学生．
                    「こっこ」というのは小中高時代のあだ名です．
                    チョコミントが大好物．有酸素運動は苦手です．
                </span>
            </p>
            <a href="/about/" class="about-link-btn">自己紹介ページ</a>
            <hr class="profile-divider" />
            <div class="sns-links-profile">
                <SnsLinks />
            </div>
        </section>
    </aside>
</div>


<style>
    #welcome-section {
        text-align: center;
        margin-top: 1.5em;
        margin-bottom: 0.5em;
    }
    #top-section {
        padding: 0 0 65px;
        margin: 0 auto;
        max-width: 1320px;
    }
    #main-flex-container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        margin-bottom: 3em;
    }
    #left-column {
        flex: 3 1 0;
        padding-left: 1em;
        min-width: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    #right-column {
        flex: 0 0 260px;
        min-width: 220px;
        max-width: 300px;
        padding: 2em 1em;
        margin: 0 1em;
        position: relative;
        border: 1px solid #ccc;
    }
    *, *::before, *::after {
        -webkit-box-sizing: inherit;
        box-sizing: inherit;
    }
    .profile-section {
        text-align: center;
        margin-bottom: 1.5em;
        background: none;
        border: none;
        padding: 0;
    }
    .profile-section h2 {
        font-size: 1.2em;
        color: #009c99;
        line-height: 2em;
    }
    .profile-section p {
        font-size: 1.1em;
        color: #333;
        line-height: 2.1;
        letter-spacing: 0.04em;
        margin: 0;
        padding: 0;
    }
    .profile-section .name {
        display: block;
        font-weight: bold;
        font-size: 1.15em;
        letter-spacing: 0.08em;
        margin-bottom: 1.1em;
    }
    .profile-section .job {
        display: block;
        font-weight: 400;
        font-size: 1em;
        color: #555;
        margin-bottom: 1.1em;
        letter-spacing: 0.04em;
    }
    .profile-section .description {
        display: block;
        font-weight: 300;
        font-size: 0.98em;
        color: #444;
        letter-spacing: 0.04em;
        line-height: 2.2;
        margin-bottom: 1.1em;
    }
    .profile-section .description a {
        color: #009c99;
        text-decoration: underline;
        font-weight: bold;
        transition: color 0.2s;
    }
    .profile-section .description a:hover {
        color: #007a6c;
        text-decoration: underline;
    }
    .profile-icon {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        margin-bottom: 1em;
        border: 3px solid #4B2121;
    }
    .info-section {
        padding: 0;
        margin: 0;
        margin-bottom: 3em;
        width: 100%;
        max-width: 800px;
    }
    .info-section h2 {
        font-size: 1.0em;
        color: #009c99;
        text-align: center;
        font-weight: bold;
        margin-bottom: 1.5em;
        letter-spacing: 0.04em;
        position: relative;
    }
    .info-section h2::after {
        content: '';
        position: absolute;
        bottom: -0.5em;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 2px;
        background: linear-gradient(90deg, #01b9b6, #009c99);
        border-radius: 1px;
    }
    .info-item {
        display: flex;
        align-items: flex-start;
        border: 1px solid #e0e0e0;
        padding: 1.2em auto;
        padding-left: 3em;
        position: relative;
        overflow: hidden;
        line-height: 1.5em;
        border-bottom: 1px solid #ccc;
    }
    .info-item:last-child {
        border-bottom: none;
    }
    .info-date {
        font-size: 0.85em;
        color: #009c99;
        margin-right: 1em;
        flex-shrink: 0;
        min-width: 80px;
        letter-spacing: 0.02em;
    }
    .info-text {
        color: #333;
        font-size: 0.95em;
        font-weight: 500;
        flex: 1;
    }
    .recent-section {
        padding: 0;
        margin: 0;
        margin-bottom: 3em;
        width: 100%;
        max-width: 800px;
    }
    .recent-section h2 {
        font-size: 1.0em;
        color: #009c99;
        text-align: center;
        margin-bottom: 1.5em;
        font-weight: bold;
        letter-spacing: 0.04em;
        position: relative;
    }
    .recent-section h2::after {
        content: '';
        position: absolute;
        bottom: -0.5em;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 2px;
        background: linear-gradient(90deg, #01b9b6, #009c99);
        border-radius: 1px;
    }
    .section-divider {
        width: 80%;
        height: 1px;
        background: linear-gradient(90deg, transparent, #e0e0e0, transparent);
        margin: 2em auto;
        border: none;
    }

    .home-title {
        text-align: center;
        font-size: 3em;
        font-weight: bold;
        line-height: 2em;
        color: transparent;
        background: linear-gradient(270deg, #98ff98, #00ffcc, #00ffae, #3eb489, #98ff98);
        background-size: 300% 300%;
        -webkit-background-clip: text;
        background-clip: text;
        letter-spacing: 0.1em;
        text-shadow: none;
        filter: none;
    }
    .home-description {
        text-align: center;
        color: #444;
        margin-bottom: 0.5em;
        line-height: 2em;
        margin-bottom: 1.5em;
    }
    .featured-section {
        margin-top: 65px;
        margin: 0 auto;
        padding: 0 20px;
    }
    .featured-section .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-column-gap: 35px;
    }
    .featured-section .grid .grid-item {
        position: relative;
    }
    .featured-section .image-holder {
        position: relative;
    }
    .featured-section .image-holder a {
        display: block;
    }
    .featured-section .image-holder img {
        vertical-align: top;
        width: 100%;
        margin: auto;
        transition: 0.2s;
    }
    .text-holder {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 220px;
        background-color: #e8e8e8;
        font-size: 24px;
        line-height: 2em;
        color: #009c99;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-align: center;
        padding: 5px 10px;
        transform: translate(-50%, -50%);
        pointer-events: none;
    }
    .text-holder::before,
    .text-holder::after {
        content: "";
        position: absolute;
        left: -30%;
        width: 160%;
        height: 1px;
        background: #fff;
        z-index: 2;
        transform: scaleX(0);
        transition: transform 0.4s cubic-bezier(0,.10,0,1);
    }
    .text-holder::before {
        top: -50%;
        transform-origin: left;
    }
    .text-holder::after {
        bottom: -50%;
        transform-origin: left;
    }
    .text-holder .border-left,
    .text-holder .border-right {
        position: absolute;
        top: -60%;
        height: 225%;
        width: 1px;
        background: #fff;
        z-index: 2;
        transform: scaleY(0);
        transition: transform 0.4s cubic-bezier(0,.10,0,1);
        transition-delay: 0.2s;
    }
    .text-holder .border-left {
        left: -25%;
        transform-origin: top;
    }
    .text-holder .border-right {
        right: -25%;
        transform-origin: top;
    }
    .text-holder span {
        font-style: italic;
        font-weight: bold;
    }
    .image-holder::before,
    .image-holder::after {
        content: "";
        position: absolute;
        left: 50%;
        width: 0;
        height: 2px;
        transition: width 0.3s linear;
        z-index: 2;
    }
    .image-holder::before {
        top: 20%;
        transform: translateX(-50%);
    }
    .image-holder::after {
        bottom: 20%;
        transform: translateX(-50%);
    }
    .image-holder:hover::before,
    .image-holder:hover::after {
        width: 80%;
    }
    .image-holder:hover img {
        filter: brightness(0.5);
    }
    .image-holder:hover .text-holder::before,
    .image-holder:hover .text-holder::after {
        transform: scaleX(1);
    }
    .image-holder:not(:hover) .text-holder::before,
    .image-holder:not(:hover) .text-holder::after {
        transition: 0.1s;
        transition-delay: 0s;
    }
    .image-holder:hover .border-left,
    .image-holder:hover .border-right {
        transform: scaleY(1);
    }
    .image-holder:not(:hover) .border-left,
    .image-holder:not(:hover) .border-right {
        transform: scaleY(0);
        transition: 0.1s;
        transition-delay: 0s;
    }
    .sns-links-profile {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.7em;
        margin-top: 0.5em;
    }
    .sns-links-profile img, .sns-links-profile svg {
        width: 24px;
        height: 24px;
        display: inline-block;
    }
    .profile-divider {
        border: none;
        border-top: 1px solid #ccc;
        width: 80%;
        margin: 1.2em auto 1em auto;
    }

    .site-title {
        font-family: 'Monoton', 'Oswald', 'Montserrat', sans-serif;
    }
    .about-link-btn {
        display: inline-block;
        padding: 1em 1.4em;
        background: #009c99;
        color: #ddd;
        text-decoration: none;
        font-size: 0.8em;
        margin: 1.2em 0;
        transition: 0.2s;
    }
    .about-link-btn:hover {
        background-color: #00d3d0;
    }
    @media (max-width: 1400px) {
        .text-holder::before,
        .text-holder::after {
            left: -10%;
            width: 120%;
        }
        .text-holder::before {
            top: -30%;
        }
        .text-holder::after {
            bottom: -30%;
        }
        .text-holder .border-left,
        .text-holder .border-right {
            top: -38%;
            height: 174%;
        }
        .text-holder .border-left {
            left: -6%;
        }
        .text-holder .border-right {
            right: -6%;
        }
    }
    @media (max-width: 1024px) {
        #main-flex-container {
            flex-direction: column;
            gap: 1.5em;
        }
        #left-column {
            padding-left: 0;
            width: 100%;
            align-items: stretch;
        }
        #right-column {
            max-width: 100%;
            min-width: 0;
            margin: 0;
            padding: 1em 0.5em;
            border: none;
        }
        .top-section {
            padding: 0 0 65px;
        }
        .recent-section {
            padding: 0 20px;
        }
        .featured-section .image-holder .text-holder {
            font-size: 16px;
            width: 160px;
        }

    }
    @media (max-width: 762px) {
        #main-flex-container {
            gap: 0.5em;
            margin-bottom: 1em;
        }
        #welcome-section {
            margin-top: 0.5em;
            margin-bottom: 0.2em;
        }
        .home-title {
            font-size: 2.3em;
        }
        .top-section {
            padding: 0 0 50px;
            width: 100%;
        }
        .recent-section {
            padding: 0 20px;
        }
        .featured-section {
            margin-top: 50px;
        }
        .featured-section .grid {
            grid-template-columns: repeat(1, 1fr);
            grid-gap: 24px;
        }
        .featured-section .image-holder .text-holder {
            font-size: 24px;
            width: 220px;
            line-height: 2em;
        }
        .text-holder::before,
        .text-holder::after {
            left: -36%;
            width: 173%;
        }
        .text-holder::before {
            top: -50%;
        }
        .text-holder::after {
            bottom: -50%;
        }
        .text-holder .border-left,
        .text-holder .border-right {
            top: -65%;
            height: 230%;
        }
        .text-holder .border-left {
            left: -30%;
        }
        .text-holder .border-right {
            right: -30%;
        }
        .profile-section {
            padding: 0.5em 0.2em;
        }

    }
</style>
